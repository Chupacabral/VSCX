{
  "name": "vscx",
  "version": "0.3.5",
  "description": "Extension and Convenience library for the VSCode API.",
  "author": "Chupacabral",
  "license": "Apache-2.0",
  "homepage": "https://github.com/Chupacabral/VSCX",
  "repository": {
    "type": "git",
    "url": "https://github.com/Chupacabral/VSCX"
  },
  "keywords": [
    "vsc",
    "visualstudiocode",
    "code",
    "vscode",
    "extension",
    "extensions",
    "api"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "minify": "uglifyjs lib/index.js -c -o lib/index.js",
    "compile": "npm run format && npm run lint && npm run build && npm run minify",
    "update-patch": "npm run compile && npm version patch",
    "update-minor": "npm run compile && npm version minor",
    "update-major": "npm run compile && npm version major"
  },
  "files": [
    "lib/**/*"
  ],
  "devDependencies": {
    "prettier": "^2.7.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.7.4",
    "uglify-js": "^3.17.0"
  },
  "dependencies": {
    "@types/vscode": "^1.70.0"
  }
}
